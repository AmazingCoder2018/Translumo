<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mde="https://spiegelp.github.io/MaterialDesignExtensions/winfx/xaml">

    <Style TargetType="mde:OversizedNumberSpinner">
        <Setter Property="Background" Value="{StaticResource SecondaryHueLightBrush}"></Setter>
        <Setter Property="Width" Value="30"></Setter>
        <Setter Property="Height" Value="58"></Setter>
        <Setter Property="Min" Value="1"></Setter>
    </Style>


    <Style TargetType="mde:OversizedNumberSpinner" x:Key="BigOversizedNumberSpinner" BasedOn="{StaticResource {x:Type mde:OversizedNumberSpinner}}">
        <Setter Property="Width" Value="52"></Setter>
        <Setter Property="Max" Value="99999"></Setter>
    </Style>
</ResourceDictionary>